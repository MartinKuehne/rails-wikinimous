<h1>All Articles</h1>
<ul class="list-group list-group-flush">
  <% @articles.each do |article| %>
    <li class="list-group-item m-3"><div class="container d-flex flex-column align-items-center"><h3><%= link_to article.title, article_path(article), class: "link-dark" %></h3>
    <p><%= article.content %></p></div>
    </li>
  <% end %>
</ul>